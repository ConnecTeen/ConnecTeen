package com.example.connecteen;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.graphics.Paint;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

public class MedicationActivity extends AppCompatActivity {

    TextView showmore;
    Button MedicTrackerTwoBtn;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_medication);

        //Underline Show More
        TextView showmore = (TextView) findViewById(R.id.ShowMoreButton);
        showmore.setPaintFlags(showmore.getPaintFlags()| Paint.UNDERLINE_TEXT_FLAG);

        //Go to Medication Tracker Screen 2

        Button MedicTrackerTwoBtn = (Button) findViewById(R.id.MedicTrackerTwoBtn);
        MedicTrackerTwoBtn.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                MedicTrackerTwoBtn();
            }
        });

    }

    public void MedicTrackerTwoBtn() {
        Intent MedicTrackerTwoBtn = new Intent(this, MedicationActivityTwo.class);
        startActivity(MedicTrackerTwoBtn);


    }
}

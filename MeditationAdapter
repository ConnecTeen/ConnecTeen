package com.example.connecteen;

import android.text.Layout;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ImageView;
import android.widget.TextView;

import androidx.annotation.NonNull;
import androidx.recyclerview.widget.RecyclerView;

import java.util.List;

public class MeditationAdapter extends RecyclerView.Adapter<MeditationAdapter.MeditationViewHolder> {

    private List<MeditationItem> meditationItems;

    public MeditationAdapter(List<MeditationItem> meditationItems) {
        this.meditationItems = meditationItems;
    }

    @NonNull
    @Override
    public MeditationViewHolder onCreateViewHolder(@NonNull ViewGroup parent, int viewType) {
        return new MeditationViewHolder(
                LayoutInflater.from(parent.getContext()).inflate(
                        R.layout.item_container_meditation, parent, false
                )
        );
    }

    @Override
    public void onBindViewHolder(@NonNull MeditationViewHolder holder, int position) {
        holder.setMeditationData(meditationItems.get(position));

    }

    @Override
    public int getItemCount() {
        return meditationItems.size();
    }

    class MeditationViewHolder extends RecyclerView.ViewHolder {

        private TextView textTitleMeditation;
        private ImageView imageMeditation;

        public MeditationViewHolder(@NonNull View itemView) {
            super(itemView);
            textTitleMeditation = itemView.findViewById(R.id.textMeditationTitle);
            imageMeditation = itemView.findViewById(R.id.imageMeditation);
        }

        void setMeditationData(MeditationItem meditationItem){
            textTitleMeditation.setText(meditationItem.getTitle());
            imageMeditation.setImageResource(meditationItem.getImage());
        }
    }
}

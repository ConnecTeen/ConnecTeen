<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeditationSelectionActivity"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="@drawable/background">


    <Button
        android:layout_width="130dp"
        android:layout_marginBottom="55dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textColor="@color/White"
        android:fontFamily="@font/firasansregular"
        android:id="@+id/btnSelect"
        android:textSize="20sp"
        android:background="@drawable/button_white_bordered"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/TextViewMeditation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditation"
        android:textColor="@color/White"
        android:fontFamily="@font/minionprobold"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT AN AMBIANCE"
        android:textColor="#99FFFFFF"
        android:fontFamily="@font/firasansregular"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/TextViewMeditation"/>

    <LinearLayout
        android:id="@+id/layoutMeditationIndicators"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnSelect"
        android:gravity="center"/>






    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/MeditationViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


    </androidx.viewpager2.widget.ViewPager2>



























</androidx.constraintlayout.widget.ConstraintLayout>
